{
  "extends": "@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "outDir": "lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}